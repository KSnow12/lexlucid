!!!
%html
  %head
    = render partial: 'layouts/google_analytics'
    = render partial: 'layouts/head'

  %body
    %header.app_header
      .content_width
        %table
          %tr
            %td
              %a.remove_border_bottom{href: '/'}
                %img.app_header_logo{src: asset_path('lexlucid-logo-vector.svg')}

            %td.media_xs_text_right{style: 'vertical-align:middle;'}
              %a.header_mobile_nav_button{href: '#', data: {toggle: '.js_header_mobile_nav_button'}}
                %span.fa.fa-fw.fa-bars

        %nav.header_nav.js_header_mobile_nav_button
          = render partial: 'layouts/navbar'

    .app_content
      .content_width
        - flash.each do |name, msg|
          %div{class: "alert alert-#{name.to_sym == :error ? 'danger' : 'success'} alert-dismissable", role: "alert"}
            %button.close{type: "button", data: {dismiss: "alert"} }
              %span{aria: {hidden: "true"} } &times;
              %span.sr-only Close
            = msg

        = yield

    %footer.footer.text_light
      .content_width
        %p
          = link_to 'https://twitter.com/LexLucid', class: 'remove_border_bottom' do
            %span.fa.fa-fw.fa-2x.fa-twitter-square

          = link_to 'https://www.facebook.com/lexlucidapp', class: 'remove_border_bottom' do
            %span.fa.fa-fw.fa-2x.fa-facebook-square

          = link_to 'https://www.instagram.com/lexlucidapp/', class: 'remove_border_bottom' do
            %span.fa.fa-fw.fa-2x.fa-instagram

        .cols
          .col_50
            %p
              &copy;
              = Time.now.year
              LexLucid. <br class='media_xs_show'>All rights reserved.

          .col_50.text_right
            %p= link_to 'Terms of Use', '#'
