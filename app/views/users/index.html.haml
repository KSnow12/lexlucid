.page-header
  = link_to new_user_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New User
  %h1 Listing users

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Email
        %th First name
        %th Last name
        %th Password digest
        %th Website
        %th Description
        %th Company name
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.first_name
          %td= user.last_name
          %td= user.password_digest
          %td= user.website
          %td= user.description
          %td= user.company_name
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, data: { confirm: 'Are you sure?' }, method: :delete
