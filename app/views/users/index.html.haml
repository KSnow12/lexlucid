.page-header
  %h1 Users

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Email
        %th Company
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= [user.first_name, user.last_name].join(' ')
          %td= user.email
          %td= user.company_name
          %td= link_to 'View', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Delete', user, data: { confirm: 'Are you sure?' }, method: :delete
