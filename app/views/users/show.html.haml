.page-header
  - if logged_in? && @user == current_user
    = link_to logout_path, class: 'btn btn-default', data: {method: :delete, "no-turbolink" => true} do
      Logout&nbsp;
      %span.fa.fa-sign-out.fa-lg

    = link_to edit_user_path(@user), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-pencil
      Edit

  %h1= [@user.first_name, @user.last_name[0]].join(' ')

%h2 Reviews
%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th Document Name
      %th Company
      - if logged_in? && (current_user.admin? || (@user.reviews.any? && current_user.id == @user.id))
        %th &nbsp;
        %th &nbsp;
  - @user.reviews.each do |review|
    %tr
      %td= link_to review.document.name, review.document
      %td= review.document.company_name
      - if logged_in? && (current_user.admin? || current_user.id == review.user_id)
        %td= link_to "Edit", edit_review_path(review.id)
        %td= link_to "Delete", review_path(review.id), "data-method" => "delete", "data-confirm" => "Are you sure you want to delete this review? This cannot be undone."
