= form_for @document_type, html: { class: "form-horizontal", role: "form" } do |f|
  = render partial: "shared/error_messages", locals: { object: @document_type }

  %table.table_padded
    %tr
      %td.cell_collapse= f.label :category, 'Document Type'
      %td= f.text_field :category
    %tr
      %td
      %td
        = f.submit class: 'btn text_capitalize'

        = link_to document_types_path, class: 'btn btn_gray' do
          %span.fa.fa-fw.fa-times
          Cancel
