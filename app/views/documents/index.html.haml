.page-header
  - if logged_in?
    = link_to new_document_path, class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-plus
      New Document
  %h1 Reviewed Documents

= form_tag documents_path, method: :get do
  = text_field_tag :q, params[:q]
  = submit_tag 'Search'
  = link_to 'clear', documents_path

%br

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Contract/Agreement Name
        %th Company Name
        %th Version (Last Updated)
        %th # of Attorney Reviews
        - if logged_in?
          %th

    %tbody
      - @documents.each do |document|
        %tr
          %td= link_to document.name, document
          %td= document.company_name
          %td= document.version
          %td= document.reviews.count
          - if logged_in?
            %td= link_to_unless document.reviews.map(&:user_id).include?(current_user.id), 'Add Review', new_document_review_path(document)
