%h1= document.name
%h3= document.company_name

- if document.reviews.any?
  %p= "#{document.reviews.count} attorneys have reviewed this contract on LexLucid."
  %p
    %table.text_small
      %tr
        %td Score:
        %td
          .js-star-readonly-score{data: {size: 'small', score:  document.overall_score}}
      - if document.version
        %tr
          %td Version:
          %td= document.version

  %hr

  %table.text_small
    %tr
      %th Issue
      %th Score
    - document.summarize_scores.each do |rating|
      %tr
        %td= rating.bullet_point.human_title
        %td.js-star-readonly-score{data: {size: 'small', score: rating.avg_score}}
