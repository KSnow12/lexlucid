= form_for @review, html: { class: "form-horizontal", role: "form" } do |f|
  = render partial: "shared/error_messages", locals: { object: @review }



  = f.fields_for :ratings do |rating_form|
    .panel.panel-default
      .panel-body
        .form-group
          = rating_form.label :bullet_point_id, class: "col-sm-2 control-label"
          .col-sm-10
            = rating_form.collection_select :bullet_point_id, BulletPoint.order(:human_title), :id, :human_title, {prompt: raw("&mdash; Select &mdash;")}, class: "form-control"
        .form-group
          = rating_form.label :score, class: 'col-sm-2 control-label'
          .col-sm-10
            = rating_form.select :score, (1..5), class: "form-control"
        .form-group
          = rating_form.label :description, class: 'col-sm-2 control-label'
          .col-sm-10
            = rating_form.text_area :description, class: 'form-control'


  .form-group
    = f.label :body, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :body, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
