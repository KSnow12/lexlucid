.page-header
  = link_to reviews_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_review_path(@review), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show review

%dl.dl-horizontal
  %dt Lawyer:
  %dd= "#{@review.user.try(:first_name)} #{@review.user.try(:last_name)}"
  %dt Body:
  %dd= @review.body
