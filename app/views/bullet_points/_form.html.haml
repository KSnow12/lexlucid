= form_for @bullet_point, html: { class: "form-horizontal", role: "form" } do |f|
  -if @bullet_point.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@bullet_point.errors.count, "error")} prohibited this bullet_point from being saved:"

      %ul
        - @bullet_point.errors.full_messages.each do |msg|
          %li= msg

  %table.table_padded
    %tr
      %td.cell_collapse= f.label :human_title, "Layman's Title"
      %td= f.text_field :human_title

    %tr
      %td.cell_collapse= f.label :human_description, "Layman's Description"
      %td= f.text_area :human_description

    %tr
      %td.cell_collapse
      %td
        = f.submit "Save", class: 'btn text_capitalize'

        = link_to bullet_points_path, class: 'btn btn_gray' do
          %span.fa.fa-fw.fa-times
          Cancel
