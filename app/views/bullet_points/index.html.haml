.page-header
  = link_to new_bullet_point_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Bullet Point
  %h1 Bullet Points

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Layman's title
        %th Layman's description
        %th
        %th
        %th

    %tbody
      - @bullet_points.each do |bullet_point|
        %tr
          %td= bullet_point.human_title
          %td= bullet_point.human_description
          %td= link_to 'Show', bullet_point
          %td= link_to 'Edit', edit_bullet_point_path(bullet_point)
          %td= link_to 'Destroy', bullet_point, data: { confirm: 'Are you sure?' }, method: :delete
